datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email       String   @unique // UNIQUE NOT NULL
  username    String   @unique // UNIQUE NOT NULL
  name        String   // NOT NULL
  password    String   // NOT NULL
  avatar_url  String?
  bio         String?
  headline    String?
  theme_preset String?
  accent_color String?
  bg_color     String?
  bg_image_url String? // bg_image_url text
  created_at  DateTime @default(now()) @db.Timestamptz
  updated_at  DateTime @updatedAt @db.Timestamptz
  socialLinks SocialLink[]
  links        Link[]
  
  @@map("users")
}

model SocialLink {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String   @db.Uuid
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade) 
  platform    String   // NOT NULL (platform enum/validasi di aplikasi)
  handle      String?
  url         String // url text NOT NULL
  order_index Int      @default(0)
  is_active   Boolean  @default(true) // soft delete sederhana
  created_at  DateTime @default(now()) @db.Timestamptz
  updated_at  DateTime @updatedAt @db.Timestamptz

  @@unique([user_id, platform]) // Asumsi satu platform per user
  @@map("social_links")
}

model Link {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String   @db.Uuid
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  title       String   // NOT NULL
  url         String   // url text NOT NULL
  order_index Int      @default(0)
  is_active   Boolean  @default(true) // soft delete sederhana
  created_at  DateTime @default(now()) @db.Timestamptz
  updated_at  DateTime @updatedAt @db.Timestamptz
  
  @@map("links")
}